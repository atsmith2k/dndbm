# Database Configuration
# For development, you can use SQLite (default)
DATABASE_URL="file:./dev.db"

# For production with Supabase, use the connection string from your Supabase project
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Socket.io Configuration
# For development
NEXT_PUBLIC_SOCKET_URL="http://localhost:3000"

# For production (Vercel deployment)
# NEXT_PUBLIC_SOCKET_URL="https://your-app-domain.vercel.app"
# NEXT_PUBLIC_APP_URL="https://your-app-domain.vercel.app"

# Session Configuration
# Maximum session duration in hours (default: 24)
SESSION_MAX_DURATION_HOURS=24

# Maximum participants per session (default: 8)
SESSION_MAX_PARTICIPANTS=8

# Session cleanup interval in minutes (default: 60)
SESSION_CLEANUP_INTERVAL_MINUTES=60

# Real-time Configuration
# Enable/disable real-time features (default: true)
ENABLE_REALTIME=true

# Fallback to polling for Vercel deployment (default: false)
FORCE_POLLING_TRANSPORT=false

# Security Configuration
# Rate limiting for session joins (requests per minute, default: 10)
SESSION_JOIN_RATE_LIMIT=10

# Rate limiting for API requests (requests per minute, default: 100)
API_RATE_LIMIT=100

# Development Configuration
# Enable debug logging (default: false)
DEBUG_LOGGING=false

# Enable development features (default: false in production)
ENABLE_DEV_FEATURES=false

# File Upload Configuration (if implementing file uploads)
# MAX_FILE_SIZE_MB=10
# ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# External Services (if needed)
# REDIS_URL="redis://localhost:6379" # For session storage in production
# WEBHOOK_SECRET="your-webhook-secret" # For external integrations
